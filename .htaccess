# Apache 2.2
<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
    <Files ~ "(?i)\.(jpe?g|png|gif|webp|svg|css|js|json|xml|txt)$">
        Allow from all
    </Files>
</IfModule>

# Apache 2.4
<IfModule mod_authz_core.c>
    Require all denied
    <Files ~ "(?i)\.(jpe?g|png|gif|webp|svg|css|js|json|xml|txt)$">
        Require all granted
    </Files>
</IfModule>

# Allow AJAX endpoint
<Files "ajax.php">
    <IfModule !mod_authz_core.c>
        Allow from all
    </IfModule>
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</Files>
